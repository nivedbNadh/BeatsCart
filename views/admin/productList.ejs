                    <%products.forEach((Products,index)=>{%>
                    <tr>
                        <th><%=index+1%></th>
                        <th><%=Products.name%></th>
                        <th><%=Products.description%></th>
                        <td><img src="/uploads/<%= Products?.image[0] %>" style="max-width: 40px; max-height: 40px;" alt="Product Image"></td>
                        <th><%=Products.price%>/-</th>
                        <th><%=Products.category%></th>
                        <th><%=Products.quantity%></th>
                        <th><%=Products.status%></th>
                        <th class="d-flex">
                          
                            <a href="editProduct"><button class="edit-btn" style="margin: 5px;">Edit</button></a>
                            <button class="delete-btn" style="margin: 5px;" id="button" data-product-id="<%= Products.id %>">Delete</button>
                        </th>                        
                       
                        
                    </tr>
                <%})%>
                   
                </tbody>
