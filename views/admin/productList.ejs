<script>
    jQuery.noConflict();
    jQuery(document).ready(function($) { 
        $('#usersTable').DataTable();
    });

    document.addEventListener("DOMContentLoaded", function () {
    const deleteButtons = document.querySelectorAll(".delete-btn");

    deleteButtons.forEach(function (button) {
        button.addEventListener("click", function (event) {
            const row = event.target.closest("tr");
            const confirmation = window.confirm("Are you sure you want to delete?");
            
            if (confirmation) {
                console.log("kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk",confirmation)
                // const productId=products.productId
                // console.log("deleting product with id:",products.productId)
                newDoc=document.getElementById('button')
                let productId=newDoc.getAttribute('data-product-id')
                console.log(productId);

                //send delete request to backend using fetch 

                fetch(`/products/${productId}`,{
                    method: "DELETE"
                })

                .then(response=>{
                    if(response.ok){
                        console.log("product success fully deleted")
                        row.style.display="none"
                    }else{
                        console.error("failed to delete products")
                    }                           
                    return response
                })
                .catch(error=>{
                    console.error("Error:",error)
                })
            
              
                
            }
        });
    });

    
    });


</script>

