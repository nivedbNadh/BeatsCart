            <a href="addProduct"><button style="margin-left: 340px; border: none; background-color: burlywood;">Add product</button></a>
            <table id="usersTable" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark">
                    <tr>
                        <th>No</th>
                        <th>ProductName</th>
                        <th>Description</th>
